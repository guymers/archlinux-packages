pkgname=acbuild-bin
pkgver=0.2.2
pkgrel=1
pkgdesc="acbuild is a command line utility to build and modify App Container Images (ACIs), the container image format defined in the App Container (appc) spec."
arch=('i686' 'x86_64')
url="https://github.com/appc/acbuild"
license=('Apache')
depends=()
optdepends=('gnupg')
source=("https://github.com/appc/acbuild/releases/download/v${pkgver}/acbuild.tar.gz")
sha256sums=('d9699cd6817cccae8aabf9bdb2645f05e6d4d3082a39e8bb7a10ddf0aaaba748')

package() {
  install -D "$srcdir/acbuild" "$pkgdir/usr/bin/acbuild"
}
